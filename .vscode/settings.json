{
    "editor.tabSize": 4,
    "files.associations": {
        "*.ts": "typescript",
        "*.mdx": "markdown",
        "*.css": "tailwindcss"
    },
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "eslint.validate": ["javascript", "javascriptreact", "typescript", "typescriptreact"],
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    }
}
